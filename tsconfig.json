{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "skipLibCheck": true,
      "baseUrl": ".",
      "experimentalDecorators": true,
      "strict": true,
      "paths": {
        "*": [
          "node_modules/*"
        ]
      },
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "src/**/*"
    ]
  }